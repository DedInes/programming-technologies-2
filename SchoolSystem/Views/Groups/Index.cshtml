@model IEnumerable<SchoolSystem.Models.Groups>

@{
    ViewBag.Title = "Subjects";
}

<h2>List of Subjects</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Teacher")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            Students
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupsDetails.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GroupId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.GroupId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GroupId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
